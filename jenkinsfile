pipeline {
    agent any

    stages {
        stage('Checkout Repo') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/SambhavSinghChouhan/Docker-Monitoring-Tools.git',
                    credentialsId: 'github-path-local'
            }
        }

        stage('Deploy on EC2') {
            steps {
                sshagent(['ec2-ssh-key']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no jenkinsdeploy@98.86.177.131 '
                        cd ~/deploy-repo || git clone https://github.com/SambhavSinghChouhan/Docker-Monitoring-Tools.git ~/deploy-repo
                        cd ~/deploy-repo
                        git pull
                        docker-compose down
                        docker-compose up -d --build
                    '
                    """
                }
            }
        }
    }
}
